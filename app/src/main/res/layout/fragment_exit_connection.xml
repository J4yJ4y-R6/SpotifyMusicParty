<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context=".ExitConnectionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background_gradient">

        <TextView
            android:id="@+id/leavePartyOf"
            android:layout_width="275dp"
            android:layout_height="92dp"
            android:layout_marginTop="68dp"
            android:lineSpacingExtra="18sp"
            android:text="@string/text_leaveParty"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/leavePartyNameTextView"
            android:layout_width="275dp"
            android:layout_height="60dp"
            android:paddingTop="10dp"
            android:text="@string/text_hintPartyName"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leavePartyOf" />

        <Button
            android:id="@+id/acceptLeavePartyButton"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="67dp"
            android:text="@string/text_leave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leavePartyNameTextView" />

        <Button
            android:id="@+id/denyLeavePartyButton"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="37dp"
            android:text="@string/text_stay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leavePartyNameTextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>