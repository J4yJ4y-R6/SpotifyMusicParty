                </ViewSwitcher>

                <ImageView
                    android:id="@+id/gridTwoOneImageButton"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="35dp"
                    android:background="@color/transparent"
                    android:contentDescription="@string/text_playlistCover"
                    android:longClickable="true"
                    android:src="@color/transparent"
                    android:visibility="invisible"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="5"
                    app:layout_rowWeight="5" />

                <ViewSwitcher
                    android:id="@+id/gridTwoTwoSwitcher"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingTop="10dp"
                    android:visibility="invisible"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="4"
                    app:layout_rowWeight="1">

                    <TextView
                        android:id="@+id/gridTwoTwoTextView"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/gridTwoTwoHeaderEditText"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:autofillHints="playlistName"
                        android:hint="@string/text_editName"
                        android:inputType="textShortMessage"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                </ViewSwitcher>

                <ImageView
                    android:id="@+id/gridTwoTwoImageButton"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="35dp"
                    android:background="@color/transparent"
                    android:contentDescription="@string/text_playlistCover"
                    android:longClickable="true"
                    android:src="@color/transparent"
                    android:visibility="invisible"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_row="5"
                    app:layout_rowWeight="5" />


            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/text_favoritePlaylistsHeader"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/text_showSavedPlaylists_description"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/gridLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>