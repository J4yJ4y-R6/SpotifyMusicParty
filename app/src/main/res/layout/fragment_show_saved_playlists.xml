                    android:visibility="invisible"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="3"
                    app:layout_rowWeight="5" />


                <ViewSwitcher
                    android:id="@+id/gridOneTwoSwitcher"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingTop="10dp"
                    android:visibility="invisible"
                    app:layout_column="2"
