<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ShowSavedPlaylistsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                app:columnCount="3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:rowCount="6">

                <ViewSwitcher
                    android:id="@+id/gridZeroZeroSwitcher"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingTop="10dp"
                    android:visibility="invisible"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    app:layout_rowWeight="1">

                    <TextView
                        android:id="@+id/gridZeroZeroHeaderTextView"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/gridZeroZeroHeaderEditText"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:autofillHints="playlistName"
                        android:hint="@string/text_editName"
                        android:inputType="textShortMessage"
                        android:textAlignment="center"
                        android:textSize="18sp" />
                </ViewSwitcher>

                <ImageView
                    android:id="@+id/gridZeroZeroImageButton"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="35dp"
                    android:background="@color/transparent"
                    android:contentDescription="@string/text_playlistCover"
                    android:longClickable="true"
                    android:src="@color/transparent"
                    android:visibility="invisible"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="1"
                    app:layout_rowWeight="5" />

                <ViewSwitcher
                    android:id="@+id/gridZeroOneSwitcher"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingTop="10dp"
                    android:visibility="invisible"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_row="0"
                    app:layout_rowWeight="1">

                    <TextView
                        android:id="@+id/gridZeroOneTextView"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/gridZeroOneHeaderEditText"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:autofillHints="playlistName"
                        android:hint="@string/text_editName"
                        android:inputType="textShortMessage"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                </ViewSwitcher>

                <ImageView
                    android:id="@+id/gridZeroOneImageButton"
